{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
 
{% block content %}
	<div class="col-md-8">
		<h1 class="my-4">
			{% if blogs|length > 0 %}
				{{title}}
			{% else %}
				Sonuç bulunamadı
			{% endif %}
		</h1>
	{% for blog in blogs %}

		<!-- Blog post-->
			<div class="card mb-4">
				{% if blog.image %}
					<img class="card-img-top" src="{{ asset("image/blog/" ~ blog.image ) }}" alt="Card image cap"/>
				{% endif %}
				<div class="card-body">
					<h2 class="card-title">{{blog.title}}</h2>
					<p class="card-text">{{blog.content|striptags|slice(0, 300) }}</p>
					<a class="btn btn-primary" href="{{path('blog_detail', {id: blog.id})}}">Read More →</a>
				</div>
				<div class="card-footer text-muted">
					Posted on <b> {{blog.getUpdatedAt()|date('d M Y D H:i')}} </b> by <b> {{blog.getAuthorName()}} </b>
					<a href="#!"></a>
				</div>
			</div>
	{% endfor %}

